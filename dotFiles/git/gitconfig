[user]
    name = "Florent NOEL"
    email = "florent.noel@protonmail.com"

[color]
    ui = auto
    diff = always
    [color "diff"]
    meta = yellow bold
    commit = cyan bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = green
    changed = yellow
    untracked = red

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[alias]
    co = checkout
    cb = checkout -b
    ci = commit
    st = status
    br = branch
    undo = reset HEAD~1
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    brennen = !git branch --merged master | egrep -v "master" | xargs git branch -d

[push]
	default = simple
	autoSetupRemote = true

[pull]
    rebase = true

[includeIf "gitdir:/mnt/dataz/dev/workspace/"]
    path = .gitconfig_taf

[includeIf "gitdir:~/dev/workspace/jobs/shamanx/"]
    path = .gitconfig_shamanx

[includeIf "gitdir:~/dev/workspace/jobs/curious/"]
    path = .gitconfig_curious

[includeIf "gitdir:~/dev/workspace/jobs/curious/nextory/"]
    path = .gitconfig_nextory

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
