# Lock and power management stuff
# Locker is starting i3lock and forces dpms off to turn off the screen immediately
set $Locker i3lock -c ff8b94 -i ~/.i3/Pictures/lock.png && xset dpms force off
bindsym $mod+Shift+l exec $Locker

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+p mode "$mode_system"

set $mode_screen Screen configuration (o) ondago, (b) buro, (h) home, (x) true black on
mode "$mode_screen" {
    bindsym o exec --no-startup-id autorandr -l ondago, mode "default"
    bindsym b exec --no-startup-id autorandr -l buro_no_scale, mode "default"
    bindsym h exec --no-startup-id autorandr -l dual_screen_1200, mode "default"
    bindsym x exec --no-startup-id xranrd --output HDMI1 --set "Broadcast RGB" "Full" , mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+v sticky toggle;exec notify-send 'sticky windows toggled'

bindsym $mod+a mode "$mode_screen"

# Shortcut to show volume control settings window
bindsym $mod+m exec pavucontrol
 
